programa
{
	//Faça um algoritmo que leia um número e retorne como resposta se ele é par ou impar
	
	funcao inicio()
	{
		inteiro n1
		
		escreva("Digite um número: ")
		leia(n1)

		se(n1%0 == 0)
		{
			escreva("Par")
		}
		senao
		{
			escreva("Impar")
		}
	}
}
